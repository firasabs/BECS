@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var title = ViewData["Title"] as string ?? "BECS";
}
<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · BECS</title>

    <!-- Bootstrap 5.3 + RTL -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons (for small pictograms) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="bg-body">
<header class="border-bottom bg-white">
    <nav class="navbar navbar-expand-lg container">
        <a class="navbar-brand fw-bold text-primary" href="/"><i class="bi bi-droplet-half me-1"></i>BECS</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div id="topNav" class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item"><a class="nav-link" href="/Donations/Index"><i class="bi bi-box-arrow-in-down"></i> קליטת תרומות</a></li>
                <li class="nav-item"><a class="nav-link" href="/Issue/Routine"><i class="bi bi-truck"></i> ניפוק שגרה</a></li>
                <li class="nav-item"><a class="nav-link" href="/Issue/Emergency"><i class="bi bi-exclamation-triangle"></i> ניפוק אר״ן</a></li>
                <li class="nav-item"><a class="nav-link" href="/Researcher/Index"><i class="bi bi-database"></i>נתוני חקר</a></li>
                <li class="nav-item"><a class="nav-link" href="/ai/forecast"><i class="bi bi-bar-chart-line"></i>תחזית</a></li>

            </ul>
        </div>
        <ul class="navbar-nav ms-auto">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <li class="nav-item me-2">
                    <span class="navbar-text">
                        שלום, <strong>@User.Identity.Name</strong>
                    </span>
                </li>
                <li class="nav-item">
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-box-arrow-right"></i> יציאה
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="btn btn-outline-primary btn-sm" asp-controller="Auth" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right"></i> כניסה
                    </a>
                </li>
            }
        </ul>
    </nav>
    @await Html.PartialAsync("_TopNav")
    <div class="container">
        @RenderBody()
    </div>
</header>

<main class="container py-4">
    @RenderBody()
</main>

<footer class="border-top py-3">
    <div class="container small text-secondary">
        © @DateTime.Now.Year · BECS  · בנק דם 
    </div>
</footer>

<!-- Toast container (TempData messages) -->
<div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3">
    @if (TempData["ok"] is string ok)
    {
        <div class="toast align-items-center text-bg-success border-0 show" role="alert">
            <div class="d-flex">
                <div class="toast-body"><i class="bi bi-check-circle me-1"></i>@ok</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
    @if (TempData["err"] is string err)
    {
        <div class="toast align-items-center text-bg-danger border-0 show" role="alert">
            <div class="d-flex">
                <div class="toast-body"><i class="bi bi-exclamation-octagon me-1"></i>@err</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
