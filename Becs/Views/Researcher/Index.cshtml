@model IEnumerable<ResearchRow>

@{
    ViewData["Title"] = "Researcher Data (De-Identified)";
}

<h2>De-identified Inventory</h2>

<table>
    <thead>
    <tr>
        <th>Blood Type</th>
        <th>Rh</th>
        <th>Donation Date</th>
        <th>Status</th>
        <th>Source</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var row in Model)
    {
        <tr>
            <td>@row.BloodType</td>
            <td>@row.Rh</td>
            <td>@row.DonationDate</td>
            <td>@row.Status</td>
            <td>@row.DonationSource</td>
        </tr>
    }
    </tbody>
</table>
