@model Becs.Models.RoutineIssueInput
@{
    ViewData["Title"] = "ניפוק שגרה";
    var chosen = ViewBag.Chosen as List<Becs.Models.BloodUnitVm>;
    var suggestions = ViewBag.Suggestions as List<Becs.Models.AltSuggestion>;
}
<div class="row g-4" dir="rtl">
    <div class="col-12">
        <div class="section-card p-4">
            <h3 class="mb-3"><i class="bi bi-truck text-success me-1"></i> ניפוק לחדרי ניתוח/טראומה (שגרה)</h3>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning"><i class="bi bi-exclamation-triangle me-1"></i> בדקו את הערכים בטופס.</div>
            }

            <!-- IMPORTANT: make this a tag-helper form -->
            <form method="post" asp-action="Routine" class="row g-3">
                @Html.AntiForgeryToken()
                <div class="col-6 col-md-3">
                    <label class="form-label">סוג ABO</label>
                    <select asp-for="ABO" class="form-select">
                        <option>O</option><option>A</option><option>B</option><option>AB</option>
                    </select>
                </div>
                <div class="col-6 col-md-2">
                    <label class="form-label">Rh</label>
                    <select asp-for="RhSign" class="form-select">
                        <option>+</option><option>-</option>
                    </select>
                </div>
                <div class="col-6 col-md-2">
                    <label class="form-label">כמות (מנות)</label>
                    <input asp-for="Quantity" class="form-control" type="number" min="1" />
                </div>
                <div class="col-12">
                    <button class="btn btn-success"><i class="bi bi-search me-1"></i> בדוק ונפק</button>
                </div>
            </form>
        </div>
    </div>

    @if (chosen != null)
    {
        <div class="col-12">
            <div class="section-card p-4">
                @if (chosen.Count == 0)
                {
                    <div class="alert alert-warning mb-0">
                        <i class="bi bi-info-circle me-1"></i> אין מלאי תואם לבקשה.
                        @if (suggestions != null && suggestions.Count > 0)
                        {
                            <div class="mt-2">חלופות זמינות:</div>
                            <div class="d-flex flex-wrap gap-2 mt-1">
                                @foreach (var s in suggestions)
                                {
                                    <span class="badge text-bg-light border">
                                        <i class="bi bi-droplet-half me-1"></i>@s.Bt
                                        <span class="ms-1 text-secondary">(@s.Count)</span>
                                    </span>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <h5 class="mb-3">נמצאו יחידות תואמות</h5>
                    <form method="post" asp-action="ConfirmIssue">
                        @Html.AntiForgeryToken()
                        <div class="table-responsive">
                            <table class="table table-bordered align-middle">
                                <thead><tr><th></th><th>מזהה</th><th>סוג</th><th>תאריך</th><th>ת״ז</th><th>שם</th></tr></thead>
                                <tbody>
                                @foreach (var u in chosen)
                                {
                                    var cls = u.ABO switch { "O"=>"bt-o","A"=>"bt-a","B"=>"bt-b","AB"=>"bt-ab", _=>"" };
                                    <tr>
                                        <td class="text-center">
                                            <input type="checkbox" name="ids" value="@u.Id" checked />
                                        </td>
                                        <td class="text-secondary">@u.Id</td>
                                        <td>
                                            <span class="bt-pill @cls">
                                                <i class="bi bi-droplet-half"></i>
                                                <span class="fw-bold">@u.ABO</span><span class="rh">@u.Rh</span>
                                            </span>
                                        </td>
                                        <td>@u.DonationDate.ToString("yyyy-MM-dd")</td>
                                        <td class="font-monospace">@u.DonorId</td>
                                        <td>@u.DonorName</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                        <button class="btn btn-primary"><i class="bi bi-check2-circle me-1"></i> אשר ונפק</button>
                    </form>

                    @if (suggestions != null && suggestions.Count > 0)
                    {
                        <div class="mt-4">
                            <strong>חלופות זמינות נוספות:</strong>
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                @foreach (var s in suggestions)
                                {
                                    <span class="badge text-bg-light border">
                                        <i class="bi bi-droplet-half me-1"></i>@s.Bt
                                        <span class="ms-1 text-secondary">(@s.Count)</span>
                                    </span>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>
